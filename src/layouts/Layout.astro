---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Navbar2 from "../components/Navbar2.astro";
export interface Props {
	title?: string
	desc?: string
}
const {title = "New Page", desc = "Default description of a page"} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content={desc}>
	<meta property="og:title" content="Iglesia Bautista Dios Proveera"/>
	<meta property="og:description" content="Sitio oficial de la Iglesia Bautista Dios Proveera"/>
	<meta property="og:url" content="https://diosproveera.netlify.app/"/>
	<meta property="og:img" content="https://github.com/Alvarado08/dios-proveera/blob/main/src/assets/congregacion2.jpg"/>
	<link rel="icon" href="/cross.png" type="image/x-icon">
	<title>{title}</title>
</head>
<body>
	<!-- <Navbar/> -->
	<Navbar2/>
	<div class="min-h-screen">
		<slot/>
	</div>
	<Footer/>
</body>
</html>