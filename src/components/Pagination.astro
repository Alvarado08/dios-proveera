---
const {prevUrl, nextUrl} = Astro.props;
---

<nav aria-label="Blog Pages">
    <div class="flex items-center gap-2">
        {
            prevUrl && (
                <a href={prevUrl}>
                <span class="bg-black text-white font-semibold uppercase text-sm rounded px-3 py-2 inline-flex items-center outline outline-1 transition-all delay-200 duration-300 hover:bg-white hover:text-black hover:outline hover:outline-1 hover:outline-black">
                    anterior
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-1">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 9l-3 3m0 0l3 3m-3-3h7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>              
                </span>
                </a>
            )
        }
        {
            nextUrl && (
                <a href={nextUrl}>
                <span class="bg-black text-white font-semibold uppercase text-sm rounded px-3 py-2 inline-flex items-center outline outline-1 transition-all delay-200 duration-300 hover:bg-white hover:text-black hover:outline hover:outline-1 hover:outline-black">
                    siguiente
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-1">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
            
                </span>
                </a>
            )
        }
    </div>
</nav>